@model ProyectSteam2.Models.UserVM;
@{
    ViewData["Title"] = "Crear usuario";
}
@{
    Layout = null;
}
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/logincss/Create.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectSteam.styles.css" asp-append-version="true" />

<body class="body-log">
    <div class="log">
        <div class="login-box">
            <h2 class="tit-reg_log">Registro de Usuario</h2>
            <form asp-controller="Login" asp-action="Create" method="post">
                <div class="div-input">
                    <div>
                        <div class="user-box">
                            <input type="text" asp-for="NameU" required="">
                            <label class="control-label">Nombre de Usuario</label>
                        </div>
                        <div class="user-box">
                            <input type="text" asp-for="Mail" required="">
                            <label class="control-label">Correo</label>
                        </div>
                    </div>
                    <div>
                        <div class="user-box">
                            <input type="password" asp-for="Pass" required="">
                        <label class="control-label">Contraseña</label>
                        </div>
                        <div class="user-box">
                            <input type="password" asp-for="ConfirmPass" required="">
                            <label class="control-label">Confirmar contraseña</label>
                        </div>
                    </div>
                </div>
                <div class="div-ingre">
                    <button>
                        Registrarse
                    </button>
                </div><br>
                <div>
                    @if(ViewData["Mensaje"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["Mensaje"]
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
    <div class="div_reg">
        <p class="p-log">Si ya tienes una cuenta</p>
        <button onclick="location.href='Start'">
        ¡Inicia Sesión!
        </button>
    </div>
</body>